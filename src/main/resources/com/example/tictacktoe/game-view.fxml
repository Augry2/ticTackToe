<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tictacktoe.GameController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <center>
      <GridPane gridLinesVisible="true" prefHeight="115.0" prefWidth="115.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="NEVER" />
          <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="NEVER" />
          <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="NEVER" />
        </rowConstraints>

         <children>
            <Button fx:id="button1" maxHeight="100" maxWidth="100" onMouseClicked="#Button1Clicked" text="" />
            <Button fx:id="button2" maxHeight="100" maxWidth="100" onMouseClicked="#Button2Clicked" text="" GridPane.columnIndex="1" />
            <Button fx:id="button3" maxHeight="100" maxWidth="100" onMouseClicked="#Button3Clicked" text="" GridPane.columnIndex="2" />
            <Button fx:id="button4" maxHeight="100" maxWidth="100" onMouseClicked="#Button4Clicked" text="" GridPane.rowIndex="1" />
            <Button fx:id="button5" maxHeight="100" maxWidth="100" onMouseClicked="#Button5Clicked" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="button6" maxHeight="100" maxWidth="100" onMouseClicked="#Button6Clicked" text="" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button fx:id="button7" maxHeight="100" maxWidth="100" onMouseClicked="#Button7Clicked" text="" GridPane.rowIndex="2" />
            <Button fx:id="button8" maxHeight="100" maxWidth="100" onMouseClicked="#Button8Clicked" text="" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Button fx:id="button9" maxHeight="100" maxWidth="100" onMouseClicked="#Button9Clicked" text="" GridPane.columnIndex="2" GridPane.rowIndex="2" />
         </children>

      </GridPane>
   </center>
   <top>
      <Label fx:id="winnerAnounce" text="" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button fx:id="playAgainButton" onMouseClicked="#PlayAgainButtonClicked" text="Play Again"  />
            <Button fx:id="exitProgramButton" onMouseClicked="#ExitProgramButtonClicked" text="Exit Program"  />
        </buttons>
      </ButtonBar>
   </bottom>




</BorderPane>
